# ==========================
# AIA REGENORD - Configuration
# ==========================

# Application
APP_NAME="AIA Regenord"
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/aia_regenord
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aia_regenord
DB_USER=postgres
DB_PASSWORD=yourpassword

# QuickBooks Online API
QBO_CLIENT_ID=your-qbo-client-id
QBO_CLIENT_SECRET=your-qbo-client-secret
QBO_REDIRECT_URI=http://localhost:8000/api/qbo/callback
QBO_ENVIRONMENT=sandbox  # sandbox ou production
QBO_COMPANY_ID=your-company-id

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS_FILE=./credentials/google-sheets-credentials.json
GOOGLE_SHEETS_FORECAST_ID=your-google-sheet-id-here

# DEXT (si API disponible)
DEXT_API_KEY=your-dext-api-key
DEXT_API_URL=https://api.dext.com/v1

# OpenAI / LangChain
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Agent AIA
AIA_SYSTEM_PROMPT_FILE=./prompts/aia_system_prompt.txt

# Email (optionnel pour notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@grouperegenord.com

# Sécurité
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/aia-regenord.log
